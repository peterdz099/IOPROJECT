<MainWindow>:
    name: "main"
    FloatLayout:
        orientation: 'vertical'

    MDBottomNavigation:


        MDBottomNavigationItem:
            name: 'screen 1'
            text: "Python"
            icon: 'language-python'

            MDFloatLayout:
                md_bg_color: 1,1,1,1

                ScreenManager:
                    id: screen_manager
                    Screen:
                        name: "screeen1"
                        canvas:
                            Color:
                                rgba: 1, 1, 1, 1
                            Rectangle:
                                size: self.size
                                pos: self.pos
                                   
                        MDLabel:
                            text: "Find your dream toy!"
                            font_size: 14
                            halign: 'center'
                            pos_hint:{"x": 0,"y": 0.1}

                        Image:
                            source: 'resources/big ball.png'
                            size_hint: 1,1
                            pos_hint:{"x": -0.3,"y":-0.05}
                        Image:
                            source: 'resources/big ball.png'
                            size_hint: 1,1
                            pos_hint:{"x": 0.4,"y":0.4}
                        Image:
                            source: 'resources/big ball.png'
                            size_hint: 1,1
                            pos_hint:{"x": 0.4,"y": -0.4}

                        MDTextField:
                            id: find
                            halign: "center"
                            valign: "center"
                            mode: "rectangle"
                            bg_color: 0,0,0,1
                            multiline: False
                            size_hint: 0.7, 0.12
                            pos_hint:{"x": 0.15,"y": 0.45}

                        MDFillRoundFlatButton:
                            text: "Search"
                            font_size: 16
                            size_hint: 0.6, 0.10
                            pos_hint:{"x":0.2,"y":0.26}
                            md_bg_color: "#2c4591"
                            on_release:
                                root.search()
                                root.clear_search()
                                screen_manager.transition.direction = "down"

                    Screen:
                        id: s2
                        name: "screeen2"

                        MDTextField:
                            id: set
                            multiline : False
                            halign: "center"
                            valign: "center"
                            mode: "rectangle"
                            bg_color: 0,0,0,1
                            multiline: False
                            size_hint: 0.7, 0.12
                            pos_hint:{"x": 0.15,"y": 0.85}

                        MDCard:
                            md_bg_color: 1,1,1,1
                            orientation: "vertical"
                            padding: "8dp"
                            size_hint: 0.8, 0.8
                            pos_hint: {"center_x": 0.5, "center_y": 0.43}

                            ScrollView:
                                MDList:
                                    id: scroll



                        MDFloatingActionButton:
                            icon: "arrow-down-thick"
                            icon_color: (1,1,1,1)
                            pos_hint:{"x":0.80,"y":0.04}
                            size_hint: 0.18, 0.1333
                            md_bg_color: "#2c4591"
                            on_release:
                                root.clear_findings()
                                screen_manager.transition.direction = "up"

        MDBottomNavigationItem:
            name: 'screen 2'
            text: "File"
            icon: 'file'

            FloatLayout:
                name: "screeen1"
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                                          
                MDLabel:
                    text: "Import .csv file with shopping list!"
                    font_size: 14
                    halign: 'center'
                    pos_hint:{"x": 0,"y": 0.1}

                Image:
                    source: 'resources/big ball.png'
                    size_hint: 1,1
                    pos_hint:{"x": -0.3,"y":-0.05}
                Image:
                    source: 'resources/big ball.png'
                    size_hint: 1,1
                    pos_hint:{"x": 0.4,"y":0.4}
                Image:
                    source: 'resources/big ball.png'
                    size_hint: 1,1
                    pos_hint:{"x": 0.4,"y": -0.4}


                MDFillRoundFlatButton:
                    text: "Import file"
                    font_size: 16
                    size_hint: 0.6, 0.10
                    pos_hint:{"x":0.2,"y":0.26}
                    md_bg_color: "#2c4591"

        MDBottomNavigationItem:
            name: 'screen 3'
            text: "Cart"
            icon: 'cart'
            load_func : root.cart()

            MDTextField:
                text: "Your Cart"
                disabled: True
                multiline : False
                halign: "center"
                valign: "center"
                mode: "rectangle"
                bg_color: 0,0,0,1
                multiline: False
                size_hint: 0.7, 0.12
                pos_hint:{"x": 0.15,"y": 0.85}

            MDCard:
                md_bg_color: 1,1,1,1
                orientation: "vertical"
                padding: "8dp"
                size_hint: 0.8, 0.8
                pos_hint: {"center_x": 0.5, "center_y": 0.43}

                ScrollView:
                    MDList:
                        id: scroll_cart

               
        MDBottomNavigationItem:
            name: 'screen 4'
            text: "History"  
            icon: 'history'
            load_func : root.history()

            MDTextField:
                text: "Browse History"
                disabled: True
                multiline : False
                halign: "center"
                valign: "center"
                mode: "rectangle"
                bg_color: 0,0,0,1
                multiline: False
                size_hint: 0.7, 0.12
                pos_hint:{"x": 0.15,"y": 0.85}

            MDCard:
                md_bg_color: 1,1,1,1
                orientation: "vertical"
                padding: "8dp"
                size_hint: 0.8, 0.8
                pos_hint: {"center_x": 0.5, "center_y": 0.43}

                ScrollView:
                    MDList:
                        id: scroll_history
                        OneLineListItem:
                            text: "dupa"

        MDBottomNavigationItem:
            name: 'screen 5'
            text: "Profile"
            icon: 'account-box'
            

            MDFloatLayout:
                md_bg_color: 1,1,1,1
                MDLabel:
                    id: username
                    
                    font_size: 14
                    halign: 'center'
                    pos_hint:{"x": 0,"y": -0.1}

                Image:
                    source: 'resources/big ball.png'
                    size_hint: 1,1
                    pos_hint:{"x": -0.4,"y":-0.05}
                Image:
                    source: 'resources/big ball.png'
                    size_hint: 1,1
                    pos_hint:{"x": 0.4,"y":0.4}
                Image:
                    source: 'resources/big ball.png'
                    size_hint: 1,1
                    pos_hint:{"x": 0.4,"y": -0.4}

                Image:
                    source: 'resources/user.png'
                    size_hint: 0.8, 0.8
                    pos_hint:{"x": 0.115,"y": 0.3}

                MDFillRoundFlatButton:
                    text: "Log out"
                    font_size: 16
                    size_hint: 0.6, 0.10
                    pos_hint:{"x":0.2,"y": 0.2}
                    md_bg_color: "#2c4591"
                    on_release:
                        root.back_to_login()
                        root.manager.transition.direction = "left"






